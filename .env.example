# ==============================================
# LinkVault Environment Variables
# ==============================================
# Copy this file to .env and fill in your values
# This is the ONLY .env file for the entire monorepo
# ==============================================

# ----------------------------------------------
# Database Configuration
# ----------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-password-here
POSTGRES_DB=linkvaultdb

# Database Connection String
# For Docker: postgresql://USER:PASSWORD@db:5432/DATABASE
# For local dev: postgresql://USER:PASSWORD@localhost:5432/DATABASE
DATABASE_URL=postgresql://postgres:your-secure-password-here@db:5432/linkvaultdb

# ----------------------------------------------
# JWT Secrets
# ----------------------------------------------
# IMPORTANT: Generate unique secrets for production!
# Command: openssl rand -hex 32
# Or: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-jwt-secret-here
JWT_REFRESH_SECRET=your-jwt-refresh-secret-here

# ----------------------------------------------
# API Configuration
# ----------------------------------------------
PORT=3000
NODE_ENV=development
# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:5173,http://localhost

# ----------------------------------------------
# Web/Frontend Configuration
# ----------------------------------------------
# API base URL for the frontend
VITE_API_URL=http://localhost:3000
